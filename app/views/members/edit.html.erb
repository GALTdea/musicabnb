<h1>My Profile</h1>

<%= form_for @member do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>
   
  <%= f.fields_for :profile, @member.profile do |profile_form| %>
    <%= profile_form.label :bio %>
    <%= profile_form.text_area :bio %>
  <% end %>
  <%= f.submit "Save Details", class: "btn btn-default" %>
<% end %>

<% @member.profile.bio if @member.profile %>